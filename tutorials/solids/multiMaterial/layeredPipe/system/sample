FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
//libs ("libsampling.so");

interpolationScheme cellPointFace;
//interpolationScheme cellPatchConstrained;

setFormat raw;

sets
(
    line
    {
        type face;
        axis       distance;
        start (0.0 0.0 0.0005);
        end   (0.07 0.07 0.0005);
    }
);

fields
(
    sigma:Transformed
);


