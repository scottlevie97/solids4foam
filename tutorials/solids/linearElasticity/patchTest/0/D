FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      D;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    boundary
    {
        type            linearSpatialDisplacement;
        a               (1e-6 2e-6 0);
        b               (3e-6 4e-6 0);
        value           uniform (0 0 0);
    }
    defaultFaces
    {
        type            empty;
    }
}

